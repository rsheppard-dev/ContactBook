<aside class="z-50 bg-light shadow-inner md:bg-darkest rounded-lg p-6 h-20 md:h-fit fixed md:static bottom-0 inset-x-0 md:inset-0 min-w-full md:min-w-fit"> 
    <nav class="flex justify-evenly md:justify-normal md:grid md:grid-cols-[30px_auto] text-light items-center gap-4">
        <a asp-action="Index" asp-controller="Categories" title="Categories" class="hover:scale-125 md:hover:scale-100 transition-transform">
            <img src="~/images/categories-icon.svg" alt="Categories" class="w-8 h-8 mx-auto">
        </a>
        <span class="font-bold text-light hidden md:block">Categories</span>

        <div class="h-full hidden md:block">
            <div class="rounded w-1 h-full bg-mid mx-auto"></div>
        </div>

        <div class="hidden md:flex flex-col gap-2 whitespace-nowrap">
            <a asp-action="Create" asp-controller="Categories">Add Category</a>
            <a asp-action="Index" asp-controller="Categories">View Categories</a>
        </div>

        <a asp-action="Index" asp-controller="Contacts" title="Contacts" class="hover:scale-125 md:hover:scale-100 transition-transform">
            <img src="~/images/contacts-icon.svg" alt="Contacts" class="w-8 h-8 mx-auto">
        </a>
        <span class="hidden md:block font-bold text-light">Contacts</span>

        <div class="hidden md:block h-full">
            <div class="rounded w-1 h-full bg-mid mx-auto"></div>
        </div>

        <div class="hidden md:flex flex-col gap-2 whitespace-nowrap">
            <a asp-action="Create" asp-controller="Contacts">Add Contact</a>
            <a asp-action="Index" asp-controller="Contacts">View Contacts</a>
        </div>

        <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Settings" class="hover:animate-spin md:hover:animate-none">
            <img src="~/images/settings-icon.svg" alt="Settings" class="w-8 h-8 mx-auto">
        </a>
        <span class="hidden md:block font-bold text-light">Settings</span>

        <div class="hidden md:block h-full">
            <div class="rounded w-1 h-full bg-mid mx-auto"></div>
        </div>

        <div class="hidden md:flex flex-col gap-2 whitespace-nowrap">
            <a asp-area="Identity" asp-page="/Account/Manage/Index">User Settings</a>
            <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit">Sign Out</button>
            </form>
        </div>
    </nav>
</aside>