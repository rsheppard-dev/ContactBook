@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="mx-auto md:w-1/2 xl:w-1/3">
    <h1 class="uppercase font-bold text-primary text-2xl mb-5">@ViewData["Title"]</h1>
    <div class="bg-mid rounded-lg px-3 py-2 shadow-lg">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="space-y-4">
            <div asp-validation-summary="ModelOnly" class="text-red-600 italic text-xs"></div>
            <div class="flex flex-col gap-2">
                <label asp-for="Input.FirstName" class="uppercase text-dark font-bold text-sm"></label>
                <input asp-for="Input.FirstName" autocomplete="firstname" aria-required="true" />
                <span asp-validation-for="Input.FirstName" class="text-red-600 italic text-xs"></span>
            </div>
            <div class="flex flex-col gap-2">
                <label asp-for="Input.LastName" class="uppercase text-dark font-bold text-sm"></label>
                <input asp-for="Input.LastName" autocomplete="lastname" aria-required="true" />
                <span asp-validation-for="Input.LastName" class="text-red-600 italic text-xs"></span>
            </div>
            <div class="flex flex-col gap-2">
                <label asp-for="Input.Email" class="uppercase text-dark font-bold text-sm"></label>
                <input asp-for="Input.Email" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-red-600 italic text-xs"></span>
            </div>
            <div class="flex flex-col gap-2">
                <label asp-for="Input.Password" class="uppercase text-dark font-bold text-sm"></label>
                <input asp-for="Input.Password" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.Password" class="text-red-600 italic text-xs"></span>
            </div>
            <div class="flex flex-col gap-2">
                <label asp-for="Input.ConfirmPassword" class="uppercase text-dark font-bold text-sm"></label>
                <input asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-red-600 italic text-xs"></span>
            </div>
            <div class="flex sm:justify-end">
                <button id="registerSubmit" type="submit" class="btn-primary w-full sm:w-fit">Register</button>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
