@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h2 class="uppercase font-bold text-dark mb-5">@ViewData["Title"]</h2>
<hr class="mb-5" />

<form id="change-password-form" method="post" class="space-y-4">
    <div asp-validation-summary="ModelOnly" class="text-red-600 italic text-xs"></div>
    <div class="flex flex-col gap-2">
        <label asp-for="Input.OldPassword" class="uppercase text-dark font-bold text-sm"></label>
        <input asp-for="Input.OldPassword" autocomplete="current-password" aria-required="true" />
        <span asp-validation-for="Input.OldPassword" class="text-red-600 italic text-xs"></span>
    </div>
    <div class="flex flex-col gap-2">
        <label asp-for="Input.NewPassword" class="uppercase text-dark font-bold text-sm"></label>
        <input asp-for="Input.NewPassword" autocomplete="new-password" aria-required="true" />
        <span asp-validation-for="Input.NewPassword" class="text-red-600 italic text-xs"></span>
    </div>
    <div class="flex flex-col gap-2">
        <label asp-for="Input.ConfirmPassword" class="uppercase text-dark font-bold text-sm"></label>
        <input asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-red-600 italic text-xs"></span>
    </div>
    <div class="flex flex-col sm:flex-row justify-end sm:items-center flex-wrap">
        <span class="flex-grow"><partial name="_StatusMessage" for="StatusMessage" /></span>
        <button type="submit" class="btn-primary w-full sm:w-fit">Update Password</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
