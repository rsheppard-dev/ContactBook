@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}

<section class="mx-auto md:w-1/2 xl:w-1/3">
    <h1 class="uppercase font-bold text-primary text-2xl mb-5">@ViewData["Title"]</h1>

    <form method="post" class="bg-mid rounded-lg px-3 py-2 shadow-lg space-y-4">
        <div asp-validation-summary="All" class="text-red-600 italic text-xs"></div>
        <div class="flex flex-col gap-2">
            <label asp-for="Input.Email" class="uppercase text-dark font-bold text-sm"></label>
            <input asp-for="Input.Email" aria-required="true" />
            <span asp-validation-for="Input.Email" class="text-red-600 italic text-xs"></span>
        </div>
        <div class="flex sm:justify-end">
            <button type="submit" class="w-full sm:w-fit btn-primary">Resend</button>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
