@page
@model LoginWith2faModel
@{
    ViewData["Title"] = "Two-Factor Authentication";
}

<section class="mx-auto md:w-1/2 xl:w-1/3">
    <h1 class="uppercase font-bold text-primary text-2xl mb-5">@ViewData["Title"]</h1>
    <hr class="mb-5" />
    <p class="text-dark mb-5">Your login is protected with an authenticator app. Enter your authenticator code below.</p>
    <div class="bg-mid rounded-lg px-3 py-2 shadow-lg mb-5">
        <form method="post" asp-route-returnUrl="@Model.ReturnUrl" class="space-y-2">
            <input asp-for="RememberMe" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-red-600 italic text-xs"></div>
            <div class="flex flex-col gap-2">
                <label asp-for="Input.TwoFactorCode" class="uppercase text-dark font-bold text-sm"></label>
                <input asp-for="Input.TwoFactorCode" autocomplete="off" />
                <span asp-validation-for="Input.TwoFactorCode" class="text-red-600 italic text-xs"></span>
            </div>
            <div class="flex flex-col sm:flex-row sm:justify-between space-y-4">
                <label asp-for="Input.RememberMachine" class="uppercase text-dark font-bold text-sm flex items-center gap-2">
                    <input asp-for="Input.RememberMachine" />
                    <span>@Html.DisplayNameFor(m => m.Input.RememberMachine)</span>
                </label>
                <button type="submit" class="btn-primary w-full sm:w-fit">Sign In</button>
            </div>
        </form>
    </div>
    <p class="text-dark text-sm">
        Don't have access to your authenticator device? You can
        <a id="recovery-code-login" asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl">log in with a recovery code</a>.
    </p>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}